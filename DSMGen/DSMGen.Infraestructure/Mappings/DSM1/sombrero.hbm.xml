<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="DSMGen.Infraestructure"
		                   namespace="DSMGen.Infraestructure.EN.DSM1">
		    
		    
			
				<class name="SombreroNH" table="Sombrero"> 
				  	
						<id name="IdSombrero" column="idSombreroSombrero" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Modelo" type="string"> 
						<column name="modelo"  not-null="true"/>
					</property>
					<property name="Color" type="string"> 
						<column name="color"  not-null="true"/>
					</property>
					<property name="Material" type="string"> 
						<column name="material"  not-null="true"/>
					</property>
					<property name="Attemporadatribute" type="string"> 
						<column name="attemporadatribute"  not-null="true"/>
					</property>
					<property name="PrecioBase" type="double"> 
						<column name="precioBase"  not-null="true"/>
					</property>
					<property name="Descripcion" type="string"> 
						<column name="descripcion"  not-null="true"/>
					</property>
					<property name="Nombre" type="string"> 
						<column name="nombre"  not-null="true"/>
					</property>
					<property name="Stock" type="integer"> 
						<column name="stock"  not-null="true"/>
					</property>
			
			
			
			
			
			
			
			
			
			
		  			
						<many-to-one name="Administrador" class="DSMGen.Infraestructure.EN.DSM1.AdministradorNH" >	
								<column name="FK_idUsuarioUsuario_idAdministrador"/> 
						</many-to-one>
											 					
			
		  			
					
							   <one-to-one name="ItemCarrito" class="DSMGen.Infraestructure.EN.DSM1.ItemCarritoNH" property-ref="Sombrero" />							
					 
						
			
		  			
						<bag name="LinPedido" >
							<key>
							
								
								<column name="FK_idSombreroSombrero_idSombrero"/>
					      	</key>
							<one-to-many class="DSMGen.Infraestructure.EN.DSM1.LinPedidoNH"/>
					    </bag>
					
			
		  			
						<bag name="Personalizacion" >
							<key>
							
								
								<column name="FK_idSombreroSombrero_idSombrero"/>
					      	</key>
							<one-to-many class="DSMGen.Infraestructure.EN.DSM1.PersonalizacionNH"/>
					    </bag>
					
			
		  			
						<bag name="Valoracion" >
							<key>
							
								
								<column name="FK_idSombreroSombrero_idSombrero"/>
					      	</key>
							<one-to-many class="DSMGen.Infraestructure.EN.DSM1.ValoracionNH"/>
					    </bag>
					
			
					
					
					
					
					
					
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="SombreroNHReadAllHQL">from SombreroNH</query>
		  <query name="SombreroNHPsombrerosPorModeloYColorHQL"><![CDATA[FROM SombreroNH as som WHERE som.Modelo = :p_modelo AND som.Color = :p_color]]></query>
		  <query name="SombreroNHPporPrecioHQL"><![CDATA[FROM SombreroNH as som WHERE som.PrecioBase = :p_precio]]></query>
		</hibernate-mapping>
	